<h1>Listing Stats</h1>
<%= form_tag import_stats_path, multipart: true do %>
	<%= file_field_tag :file %>
	<%= submit_tag "Upload" %>
<% end %>

<br />
<%= link_to 'Home', root_path %> | <%= link_to 'Reset All', kill_stats_url, :method => :delete, :confirm => "CLICK OK TO RESET!" %>
<br />

<table>
  <thead>
    <tr>
      <th>Year</th>
      <th>Week</th>
      <th>Game Mean</th>
      <th>Season Mean</th>
      <th>Current Mean</th>
      <th>OFF Mean</th>
      <th>Season OFF Mean</th>
      <th>Cum OFF Mean</th>
      <th>DEF GameMean</th>
      <th>Season DEF Mean</th>
      <th>Cum DEF Mean</th>
      <th>Win</th>
      <th>Team1 pts</th>
      <th>Team2 pts</th>
      <th>Diff</th>
      <th>Team1</th>
      <th>Team2</th>
      <th>Abbr1</th>
      <th>Abbr2</th>
    </tr>
  </thead>

  <tbody>
    <% @stats.each do |stat| %>
      <tr>
        <td><%= stat.year %></td>
        <td><%= stat.week %></td>
        <td><%= stat.GameMean %></td>
        <td><%= stat.Season2dateMean %></td>
        <td><%= stat.CurrentMeanTrend %></td>
        <td><%= stat.OFFGameMean %></td>
        <td><%= stat.Season2dateOFFMean %></td>
        <td><%= stat.CurrentOFFMeanTrend %></td>
        <td><%= stat.DEFGameMean %></td>
        <td><%= stat.Season2dateDEFMean %></td>
        <td><%= stat.CurrentDEFMeanTrend %></td>
        <td><%= stat.win %></td>
        <td><%= stat.team1pts %></td>
        <td><%= stat.team2pts %></td>
        <td><%= stat.diff %></td>
        <td><%= stat.team1 %></td>
        <td><%= stat.team2 %></td>
        <td><%= stat.short1 %></td>
        <td><%= stat.short2 %></td>
      </tr>
    <% end %>
  </tbody>
</table>