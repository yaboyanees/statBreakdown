<% a = @teamValues %><%= a[0] %>
<script type="text/javascript">
$(function () {

    // Give the points a 3D feel by adding a radial gradient
    Highcharts.getOptions().colors = $.map(Highcharts.getOptions().colors, function (color) {
        return {
            radialGradient: {
                cx: 0.4,
                cy: 0.3,
                r: 0.5
            },
            stops: [
                [0, color],
                [1, Highcharts.Color(color).brighten(-0.2).get('rgb')]
            ]
        };
    });

    // Set up the chart
    var chart = new Highcharts.Chart({
        chart: {
            renderTo: 'scatter',
            margin: 100,
            type: 'scatter',
            options3d: {
                enabled: true,
                alpha: 10,
                beta: 30,
                depth: 250,
                viewDistance: 5,

                frame: {
                    bottom: { size: 1, color: 'rgba(0,0,0,0.02)' },
                    back: { size: 1, color: 'rgba(0,0,0,0.03)' },
                    side: { size: 1, color: 'rgba(0,0,0,0.04)' }
                }
            }
        },
        title: {
            text: '<%= @team1name.first.gsub('"','') %> (<%= @team1s2dm.last.round(3) %>) vs <%= @team2name.first.gsub('"','') %> (<%= @team2s2dm.last.round(3) %>)',
            style: {
				fontSize:'2vmax'
			}
        },
        subtitle: {
            text: 'Advantage Value: <%= r = ((@team1s2dm.last) - (@team2s2dm.last)).round(3) %>',
			style: {
				fontSize:'1.7vmax'
			}
        },
        plotOptions: {
            scatter: {
                width: 10,
                height: 10,
                depth: 10
            }
        },

        legend: {
            enabled: false
        },
        series: [{            
            name: '<%= @team1name.first.gsub('"','') %>',
            data: [<%= @teamValue1 %>],
            color: '#dd402e'
        }, {          
            name: '<%= @team2name.first.gsub('"','') %>',
            data: [<%= @teamValue2 %>],
            color: '#323232'
        }, {  
            data: [<%= a[0] %>],
            color: 'green'
        }, {            
            data: [<%= a[1] %>],
            color: 'green'
        }, {             
            data: [<%= a[2] %>],
            color: 'green'
        }, {            
            data: [<%= a[3] %>],
            color: 'green'
        }, {             
            data: [<%= a[4] %>],
            color: 'green'
        }, {            
            data: [<%= a[5] %>],
            color: 'green'
        }, {             
            data: [<%= a[6] %>],
            color: 'green'
        }, {            
            data: [<%= a[7] %>],
            color: 'green'
        }, {           
            data: [<%= a[8] %>],
            color: 'green'
