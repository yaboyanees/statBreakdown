<title>Match-Up | The Q5</title>
<div class="x-container max width">
	<div class="x-landmark-breadcrumbs-wrap">
		<div class="x-landmark">
			<h1 class="h-landmark entry-title"><span>Match-Up</span></h1>
			<%= link_to "http://www.theQ5.com/tuitorial" do %><p><i>Want to Learn More About This Tool?</i></p><% end %>
		</div>
		<div class="x-breadcrumbs-wrap">
			<div class="x-breadcrumbs"><a href="http://theq5.com"><span class="home"><i class="x-icon-home" data-x-icon="&#8962;" style="font-size: 18px; color: #333333;"></i></span></a> <span class="delimiter"><i class="x-icon-angle-right" data-x-icon="|"></i></span> <span class="current" style="color: #28323F;">Q5 ZONE</span>
			</div>              
		</div>
	</div>
</div>
<% if params[:firstTeam].present? && params[:secondTeam].present? %>	
	<%= render partial: 'chartScript' %>
	<%= render partial: 'columnScript' %>
	<%= render partial: 'scatterScript' %>
	<div id="chart"></div>
	<div id="transform">
		<input class="transform" name="newSeries" type="radio" value="a"> Team</input>
		<input class="transform" name="newSeries" type="radio" value="b"> Offense</input>
		<input class="transform" name="newSeries" type="radio" value="c"> Defense</input>
	</div>
	<div id="teamTable">
		<div id="team1Table">	
			<table cellspacing='0'> 
				<thead>
					<tr>
						<th colspan="3"><%= @team1name.first %></th>
					</tr>
				</thead>
				<tbody>
					<% @team1CurrentStat.each do |t1| %>
						<% if t1[5].nil? %>
						<tr>
							<td><i>Wk <%= t1[1] %></i>:</td>
							<td ><b><%= t1[2] %></b></td>
							<td></td>
						</tr>	
						<% else %>
						<tr>
							<td><i>Wk <%= t1[1] %></i>:</td>	
							<td><b><%= t1[2] %></b> <%= t1[4] %>-<%= t1[5] %> vs <%= t1[3] %></td>
							<td><%= link_to 'Game Map', home_path(:id => t1[6]) %></td>
						</tr>					
						<% end %>
					<% end %>
				</tbody>
			</table>
		</div>
		<div id="team2Table">	  
			<table cellspacing='0'> 
				<thead>
					<tr>
						<th colspan="3"><%= @team2name.first %></th>
					</tr>
				</thead>
				<tbody>
					<% @team2CurrentStat.each do |t2| %>
						<% if t2[5].nil? %>
						<tr>
							<td><i>Wk <%= t2[1] %></i>:</td>
							<td><b><%= t2[2] %></b></td>
							<td></td>
						</tr>	
						<% else %>
						<tr>
							<td><i>Wk <%= t2[1] %></i>:</td>
							<td><b><%= t2[2] %></b> <%= t2[4] %>-<%= t2[5] %> vs <%= t2[3] %></td>
							<td><%= link_to 'Game Map', home_path(:id => t2[6]) %></td>
						</tr>					
						<% end %>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
	<br style="clear:both" />
	<div id="column"></div>
	<div id="scatter" style="padding-top: 35px;"></div>
	<p class="newMatch"><%= link_to 'New Matchup', home_index_path, class: 'a' %></p>
<% else %>
	<div id="teamMatchup">
		<h2>Match-Up Teams</h2>
		<%= form_tag(home_index_path, :method => "get", id: "search-form", :validate=>true) do %>
			<%= select_tag :firstTeam, options_for_select(@teamNames, params[:firstTeam]), :prompt => 'Select Team 1' %><i> VS </i>
			<%= select_tag :secondTeam, options_for_select(@teamNames, params[:secondTeam]), :prompt => 'Select Team 2' %><br /><br /><br />
			<%= submit_tag "View Matchup", :name => nil %>
		<% end %>
	</div>
<% end %>
