<script type="text/javascript">
$(function () {
    $('#column').highcharts({
        chart: {
            type: 'column'
        },
        title: {
            text: '<%= @team1name.first.gsub('"','') %> (<%= @team1s2dm.last.round(3) %>) vs <%= @team2name.first.gsub('"','') %> (<%= @team2s2dm.last.round(3) %>)',
            style: {
				fontSize:'2vmax'
			}
        },
        subtitle: {
            text: 'Advantage Value: <%= r = ((@team1s2dm.last) - (@team2s2dm.last)).round(3) %>',
			style: {
				fontSize:'1.7vmax'
			}
        },
		xAxis: {
			categories: ['Team', 'Offense', 'Defense']
		},
		yAxis: {
			title: {
				text: 'Performance',
				style: {
                    fontSize:'1.7vmax',
                }
			}
		},
        series: [{
            name: '<%= @team1name.first.gsub('"','') %>',
            data: <%= @teamValue1 %>,
            color: '#dd402e'
        }, {
            name: '<%= @team2name.first.gsub('"','') %>',
            data: <%= @teamValue2 %>,
            color: '#323232'
        }]
    });
});
</script>